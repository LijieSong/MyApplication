<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.myapplication.VideoActivity">
    <com.example.user.utils.weight.swipyrefresh.SwipyRefreshLayout
        android:id="@+id/srl_refresh"
        android:layout_width="match_parent"
        app:direction="both"
        android:layout_height="match_parent">
        <com.example.user.utils.weight.numal.ListSlideView
            android:id="@+id/list_item"
            app:mode="right"
            android:dividerHeight="1dp"
            android:divider="@color/yellow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.example.user.utils.weight.swipyrefresh.SwipyRefreshLayout>
</RelativeLayout>
